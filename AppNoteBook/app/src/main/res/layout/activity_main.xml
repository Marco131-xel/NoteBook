<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Contenedor superior con los botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/btnTexto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Texto"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/blue"/>

        <Button
            android:id="@+id/btnCodigo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Código"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/green"/>

        <Button
            android:id="@+id/btnReportes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reportes"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/purple"/>
    </LinearLayout>

    <!-- Espacio de Código -->
    <LinearLayout
        android:id="@+id/contenedorCodigo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Historial de salida -->
        <TextView
            android:id="@+id/tvCodigoSalida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            android:background="@drawable/border_historial"
            android:visibility="gone"/>

        <!-- Entrada de código con borde -->
        <EditText
            android:id="@+id/etCodigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escribe código aquí"
            android:inputType="textMultiLine"
            android:background="@drawable/edittext_border"
            android:padding="12dp"
            android:minHeight="48dp"/>

        <!-- Contenedor de error -->
        <LinearLayout
            android:id="@+id/errorContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="#FFCDD2"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvCodigoErrores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnEjecutarCodigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compilar"
                android:backgroundTint="@android:color/holo_green_dark"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btnLimpiarCodigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Limpiar"
                android:backgroundTint="@android:color/holo_blue_bright"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Espacio de Texto -->
    <LinearLayout
        android:id="@+id/contenedorTexto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Historial de salida para Texto -->
        <TextView
            android:id="@+id/tvTextoSalida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            android:background="@drawable/border_historial"
            android:visibility="gone"/>

        <!-- Entrada de texto con borde -->
        <EditText
            android:id="@+id/etTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escribe texto aquí"
            android:inputType="textMultiLine"
            android:background="@drawable/edittext_border"
            android:padding="12dp"
            android:minHeight="48dp"/>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnLimpiarTexto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Limpiar"
                android:backgroundTint="@android:color/holo_red_dark"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
